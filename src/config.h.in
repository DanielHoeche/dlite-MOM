/* -*- Mode: C -*- */

#ifndef _DLITE_CONFIG_H
#define _DLITE_CONFIG_H

#include "utils/config.h"

/* dlite version */
#ifndef dlite_VERSION
#define dlite_VERSION "@dlite_VERSION@"
#endif

/* hardcoded default paths */
#define DLITE_TEMPLATES_PATH \
  "@CMAKE_INSTALL_PREFIX@/@DLITE_TEMPLATES_PATH@"
#define DLITE_STORAGE_PLUGINS_PATH \
  "@CMAKE_INSTALL_PREFIX@/@DLITE_STORAGE_PLUGINS_PATH@"
#define DLITE_TRANSLATOR_PLUGINS_PATH \
  "@CMAKE_INSTALL_PREFIX@/@DLITE_TRANSLATOR_PLUGINS_PATH@"
#define DLITE_PYTHON_PLUGINS_PATH \
  "@CMAKE_INSTALL_PREFIX@/@DLITE_PYTHON_PLUGINS_PATH@"

/* built-in storage plugins */
#cmakedefine WITH_JSON
#cmakedefine WITH_HDF5
#cmakedefine WITH_POSTGRESQL

/* available bindings */
#cmakedefine WITH_PYTHON

/* Get rid of some annoying MSVC warnings */
#ifdef _MSC_VER
 /* do not warn about fully valid use of alingof() */
 #pragma warning(disable:4116)
#endif


#endif /* _DLITE_CONFIG_H */
