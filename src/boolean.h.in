/* boolean.h - cross-platform header for a bool type
 */
#ifndef _BOOLEAN_H
#define _BOOLEAN_H

#cmakedefine HAVE_STDBOOL_H
#cmakedefine HAVE__BOOL

#ifdef HAVE_STDBOOL_H
# include <stdbool.h>
#else
# ifdef HAVE__BOOL
#  define bool _Bool
# else
#  define bool unsigned char
# endif
# define true    1
# define false   0
# define __bool_true_false_are_defined 1
#endif

#endif /* _BOOLEAN_H */
